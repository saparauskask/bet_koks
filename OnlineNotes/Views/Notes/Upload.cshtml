@model OnlineNotes.Models.NoteAttachment
@using OnlineNotes.Models.Enums;

@{
    ViewData["Title"] = "Upload";
}

<h1>Upload file</h1>

<div class="mb-3 mt-3">
    <form asp-controller="Notes" asp-action="Upload" method="post" enctype="multipart/form-data">
        <div>
            <label class="form-label">Upload file</label>
            <input type="file" asp-for="File" class="form-control mb-2" />
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
</div>