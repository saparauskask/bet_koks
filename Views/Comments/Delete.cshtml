@model OnlineNotes.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<head>
    <style>
        .box {
            background-color: #f0f0f0;
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px;
        }
    </style>
</head>

<h1>Are you sure you want to delete this?</h1>
<div>
    <p><b>Date of creation: </b> @ViewBag.CreationDate</p>
    <br />
    <p><b>Contents:</b></p>
    <div class="box">
        <p>@ViewBag.Contents</p>
    </div>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" name="Id" value="@ViewBag.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Notes" asp-action="Index">Back to Index</a>
    </form>
</div>
