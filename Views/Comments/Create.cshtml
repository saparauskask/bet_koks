@model OnlineNotes.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h1>Write a new comment</h1>

<hr />

<div class="col-md-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Contents" class="control-label"></label>
            <textarea asp-for="Contents" class="form-control" style="height: 250px; resize: none;"></textarea>
            <span asp-validation-for="Contents" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="NoteId" value="@ViewBag.Message" />
        <input type="hidden" asp-for="CreationDate" value="@ViewBag.CreationDate" />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-secondary" asp-controller="Notes" asp-action="Index">Back to list</a>
</div>

<div asp-validation-summary="All" class="text-danger">
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}