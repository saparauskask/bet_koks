    pre {
        overflow-x: auto;
        white-space: pre-wrap;
    }
</style>

<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
